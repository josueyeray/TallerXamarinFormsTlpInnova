<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.MainView">
     <StackLayout>
     	<Label Text="{Binding CurrentWeather.name}"/>
      <StackLayout Orientation="Horizontal">
	       <Label Text="Temperatura: "/>
	       <Label Text="{Binding CurrentWeather.main.temp}"/>
	    </StackLayout>
	    <StackLayout Orientation="Horizontal">
	       <Label Text="Humedad: "/>
	       <Label Text="{Binding CurrentWeather.main.humidity}"/>
	    </StackLayout>
	    <StackLayout Orientation="Horizontal">
	       <Label Text="Presión: "/>
	       <Label Text="{Binding CurrentWeather.main.pressure}"/>
	    </StackLayout>
     </StackLayout>
</ContentPage>